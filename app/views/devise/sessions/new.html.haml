.white-font.input
  %h2.middle= t('.log_in')

  = simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "center-form" }) do |f|
    .form-group
      = f.input :email
      = f.input :password

      - if devise_mapping.rememberable?
        = f.check_box :remember_me
        = f.label :remember_me

    .form-actions
      = f.submit t('.log_in'), class: "btn btn-default"
      = link_to t('.forgot_password'), new_user_password_path, class: "btn btn-default"
