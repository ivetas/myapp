%h2= t('.log_in')

= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
  .form-group
    = f.input :email
    = f.input :password

    - if devise_mapping.rememberable?
      = f.check_box :remember_me
      = f.label :remember_me

  .actions
    = f.submit t('.log_in')

= render "devise/shared/links"
