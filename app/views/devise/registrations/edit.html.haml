.white-font.input
  %h2.middle= t('.edit_profile')

  = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "center-form" }) do |f|
    = devise_error_messages!

    .form-group
      = f.input :email
      = f.input :password, hint: t('.hint'), autocomplete: "off"
      = f.input :password_confirmation, autocomplete: "off"
      = f.input :current_password, autocomplete: "off"

    .form-actions
      = f.submit t('save'), class: "btn btn-default"
