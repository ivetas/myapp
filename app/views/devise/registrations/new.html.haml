%h2= t('.sign_up')

= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = devise_error_messages!

  .form-group
    .col-lg-8
      = f.input :email
      = f.input :username
      = f.input :password
      = f.input :password_confirmation

  .form-group
    .col-lg-12
      = f.submit t('.sign_up'), :class => "submit"
