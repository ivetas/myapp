= simple_form_for @category, url: url, html: { class: "input-form" } do |f|
  - if @category.errors.any?
    .error_explanation
      %h2= pluralize(@category.errors.count, t('error'))
      %ul
      - @category.errors.full_messages.each do |message|
        %li= message

  .form-group
    = f.input :name

  .form-actions
    = f.submit t('save'), class: "btn btn-default"
    = link_to t('back'), admin_categories_path, class: "btn btn-default"
