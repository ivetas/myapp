= simple_form_for @article, url: url, html: { class: "form-horizontal" } do |f|
  - if @article.errors.any?
    .error_explanation
      %h2= pluralize(@article.errors.count, t('error'))

      %ul
      - @article.errors.full_messages.each do |message|
        %li= message

  .form-group
    .col-lg-12
      = f.file_field :photo
      = f.input :title
      = f.input :text
      = f.input :published, as: :boolean

  .col-lg-12
    = f.submit t('save'), class: "btn btn-default"
    = link_to t('back'), admin_articles_path, class: "btn btn-default"
