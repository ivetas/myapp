= simple_form_for @article, url: url do |f|
  - if @article.errors.any?
    .error_explanation
      %h2= pluralize(@article.errors.count, t('error'))

      %ul
      - @article.errors.full_messages.each do |message|
        %li= message

  .form-group
    .col-lg-12
      = f.input :title
      = f.input :description
      = f.file_field :photo
      = f.input :published, as: :boolean

  .form-group
    .col-lg-12
      = f.submit t('save'), class: "btn btn-default"
      = link_to t('back'), admin_articles_path, class: "btn btn-default"
